<?xml version="1.0"?>
<Container version="2">
  <Name>HDHomeRun-EPG</Name>
  <Repository>ghcr.io/metacolin/hdhr-epg2xml-for-unraid</Repository>
  <Registry>https://github.com/metaColin/HDHR-EPG2XML-for-Unraid</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/metaColin/HDHR-EPG2XML-for-Unraid/issues</Support>
  <Project>https://github.com/metaColin/HDHR-EPG2XML-for-Unraid</Project>
  <Overview>HDHomeRun EPG to XMLTV converter with built-in HTTP server. Automatically fetches Electronic Program Guide data from your HDHomeRun device and serves it via HTTP for use with Plex, Emby, Jellyfin, and other media servers. No volume mounting required - just point your media server to http://[UNRAID-IP]:8083/epg.xml. For channels without EPG data, add dummy programming with URL parameters like ?dummy=1hr or ?dummy=30min</Overview>
  <Category>MediaApp:Video MediaServer:Video Tools:</Category>
  <WebUI>http://[IP]:[PORT:8083]/</WebUI>
  <TemplateURL>https://raw.githubusercontent.com/metaColin/HDHR-EPG2XML-for-Unraid/main/hdhomerun-epg.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/metaColin/HDHR-EPG2XML-for-Unraid/main/icon.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DateInstalled></DateInstalled>
  <DonateText>If you find this useful, consider buying me a coffee!</DonateText>
  <DonateLink/>
  <Requires/>
  <Config Name="Web Port" Target="8083" Default="8083" Mode="tcp" Description="Port for the HTTP server serving EPG data" Type="Port" Display="always" Required="true" Mask="false">8083</Config>
  <Config Name="HDHomeRun IP" Target="HDHOMERUN_HOST" Default="hdhomerun.local" Mode="" Description="IP address or hostname of your HDHomeRun device" Type="Variable" Display="always" Required="true" Mask="false">hdhomerun.local</Config>
  <Config Name="Update Schedule" Target="CRON_SCHEDULE" Default="0 3 * * *" Mode="" Description="Cron schedule for EPG updates (default: 3 AM daily)" Type="Variable" Display="always" Required="false" Mask="false">0 3 * * *</Config>
  <Config Name="Timezone" Target="TZ" Default="America/Chicago" Mode="" Description="Your local timezone for scheduling" Type="Variable" Display="always" Required="false" Mask="false">America/Chicago</Config>
  <Config Name="Days to Fetch" Target="DAYS" Default="7" Mode="" Description="Number of days of EPG data to fetch (max 7)" Type="Variable" Display="advanced" Required="false" Mask="false">7</Config>
  <Config Name="Hours per Update" Target="HOURS" Default="3" Mode="" Description="Hours between updates" Type="Variable" Display="advanced" Required="false" Mask="false">3</Config>
  <Config Name="Debug Mode" Target="DEBUG" Default="on" Mode="" Description="Enable debug logging (on/off)" Type="Variable" Display="advanced" Required="false" Mask="false">on</Config>
  <Config Name="Run on Start" Target="RUN_ON_START" Default="true" Mode="" Description="Run EPG update when container starts" Type="Variable" Display="advanced" Required="false" Mask="false">true</Config>
  <Config Name="EPG Data" Target="/output" Default="/mnt/user/appdata/hdhomerun-epg/data" Mode="rw" Description="Storage for EPG file" Type="Path" Display="advanced" Required="false" Mask="false">/mnt/user/appdata/hdhomerun-epg/data</Config>
  <Config Name="Logs" Target="/var/log" Default="/mnt/user/appdata/hdhomerun-epg/logs" Mode="rw" Description="Storage for log files" Type="Path" Display="advanced" Required="false" Mask="false">/mnt/user/appdata/hdhomerun-epg/logs</Config>
</Container>